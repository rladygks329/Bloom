


CREATE TABLE MEMBER (
 MEMBER_ID NUMBER PRIMARY KEY,   -- 회원 고유번호
 MEMBER_EMAIL VARCHAR2(100) UNIQUE NOT NULL,   -- 회원 이메일
 MEMBER_PASSWORD VARCHAR2(100) NOT NULL, -- 회원 비밀번호
 MEMBER_PHONE VARCHAR2(100) NOT NULL, -- 회원 전화번호
 MEMBER_ADDRESS VARCHAR2(100) NOT NULL, -- 회원 주소
 MEMBER_LEVEL VARCHAR2(100) DEFAULT STUDENT, -- 강사 유무
 MEMBER_INTRODUCE VARCHAR2(100), -- 강사 소개
 MEMBER_PROFILE_URL VARCHAR2(100) -- 강사 사진
);

CREATE TABLE BOARD (
 BOARD_ID NUMBER PRIMARY KEY,   -- 게시판 고유번호
 MEMBER_ID NUMBER NOT NULL,   -- 회원 고유번호
 PARENT_BOARD_ID NUMBER NOT NULL,   -- 답글 고유번호
 BOARD_TITLE VARCHAR2(100) NOT NULL, -- 게시글 제목
 BOARD_CONTENT VARCHAR2(100) NOT NULL, -- 게시글 내용
 BOARD_DATE_CREATED TIMESTAMP NOT NULL, -- 게시글 생성시간
 BOARD_VIEWS NUMBER NOT NULL, -- 게시글 조회수
 BOARD_ANSWER_CNT NUMBER NOT NULL, -- 게시글 답글 수
 BOARD_LIKE_CNT NUMBER NOT NULL, -- 게시글 좋아요 수
);

CREATE TABLE BOARD_LIKE (
 MEMBER_ID NUMBER NOT NULL,   -- 회원 고유번호
 BOARD_ID NUMBER NOT NULL,   -- 게시판 고유번호
);

CREATE TABLE REPLY (
 MEMBER_ID NUMBER NOT NULL,   -- 회원 고유번호
 BOARD_ID NUMBER NOT NULL,   -- 게시판 고유번호
);
